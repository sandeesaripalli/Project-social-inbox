    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">Social inbox</h1>

            </div>


            <p>Login in. To see it in action.</p>
            <form class="m-t" role="form" action="#">
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Username" required="">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" required="">
                </div>
              <button class="btn btn-primary m-b-lg" type="button"><i class="fa fa-check"></i>&nbsp;Submit</button>

              <%=link_to 'Sign in',  signin_path, class:'btn btn-info btn-twitter m-b-lg fa fa-twitter' %>




              <a class="btn btn-success btn-facebook m-b-lg">
                <i class="fa fa-facebook"> </i> Sign in with Facebook
              </a>
              <a class="btn btn-danger btn-google-plus m-b-lg">
                <i class="fa fa-google-plus"> </i> Sign in with Google
              </a><br />

                <a href="#"><small>Forgot password?</small></a>
                <p class="text-muted text-center"><small>Do not have an account?</small></p>
                <a class="btn btn-lg btn-white btn-block" href="<%= url_for :controller => 'logins', :action => 'register' %>">Create an account</a>
            </form>

        </div>
    </div>



